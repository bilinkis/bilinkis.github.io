<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %> 
<body>
	<% if(locals.loggedIn == null){ %>
		<%- include('./partials/header.ejs') %> 


		<% } else{ %>
			<%- include('./partials/headerLogueado.ejs') %> 
			<% } %>


	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			
			<div class="img-container offset-3 col-2">
				<% if(userData.image !== ""){ %>
				<img src="/images/users/<%= userData.image %>" alt="foto de perfil" class="foto-perfil">
				<% }else{ %>
					<img src="/images/users/nicobilinkis.png" alt="foto de perfil" class="foto-perfil">
				<% } %> 
			</div>
			
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= userData.name + " " + userData.lastName%> </h1>
					
					
				
				</div>
				<div>
					
				</div>
			</div>
			<br><br>
			
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<% if(locals.loggedIn == true && locals.user.id == userData.id){ %>
				<h2 class="products-title">Mis seguidores</h2>
				<% }else{ %>
					<h2 class="products-title">Seguidores</h2>
				<%} %> 
			</div>
			<!-- Show mis productos -->
			
<% for(let i=0;i<followers.length;i++){ %>
    <% console.log(followers) %> 
    <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
            <a href="/profile/<%= followers[i].follower %>">
                <figure class="product-box_image">
                    <img src="/images/users/<%= followers[i]['User.image'] %>" alt="cafetera moulinex">
                </figure>
                <article class="product-box_data">
                    <h2><%= followers[i]['User.name'] + " " +  followers[i]['User.lastName'] %> </h2>
                    
                </article>
            </a>
        </section>
    </div>
    <% } %> 
			
			
		</div>
		<div class="row">
			<div class="col-12">
				
			</div>
			<!-- Show mis productos -->
			

				
			
			
		</div>
	</div>



	<%- include('./partials/footer.ejs') %> 
</body>	
</html>