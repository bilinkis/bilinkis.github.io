<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head.ejs') %> 


<body>
	<% if(locals.loggedIn == null){ %>
		<%- include('./partials/header.ejs') %> 
		<% } else{ %>
			<%- include('./partials/headerLogueado.ejs') %> 
		<% } %> 
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda para '<%= query %>'</h2>
				
			</div>
			<%if(buscador.length == 0){%>
				<h2>No se han encontrado resultados para '<%=query%>', intente buscar otro término</h2>
			<%}%>
			<% for(let i=0;i<buscador.length;i++){ %> 

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= buscador[i].id %>" >
							<figure class="product-box_image">
								<img src="/images/products/<%=buscador[i].image%>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%=  buscador[i].title  %></h2>
								<a href="/profile/<%=buscador[i]["user.id"]%>"><p style="font-weight: bold;">Creado por <%= buscador[i]["user.name"] + " " + buscador[i]["user.lastName"] %></p></a>
								<p><%= buscador[i].description %></p>
								<p>Comentarios: <%= buscador[i].comments %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 

			<!-- Show the "ultimos" products -->
				 

			<%- include('./partials/footer.ejs') %> 
</body>

</html>