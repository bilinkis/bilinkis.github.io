<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head.ejs') %> 


<body>
	<%- include('./partials/header.ejs') %> 
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda para '<%= query %>'</h2>
				
			</div>
			<% for(let i=0;i<buscador.length;i++){ %> 

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= buscador[i].id %>" >
							<figure class="product-box_image">
								<img src="/images/products/<%=buscador[i].image%>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%=  buscador[i].title  %></h2>
								<p><%= buscador[i].description %></p>
								<p>Comentarios: <%= buscador[i].comments %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 

			<!-- Show the "ultimos" products -->
				<%- include('./partials/busqueda.ejs') %> 

			<%- include('./partials/footer.ejs') %> 
</body>

</html>