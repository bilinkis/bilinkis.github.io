<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %> 
<body>
	<% if(locals.loggedIn == null){ %>
		<%- include('./partials/header.ejs') %> 


		<% } else{ %>
			<%- include('./partials/headerLogueado.ejs') %> 
			<% } %>


	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			
			<div class="img-container offset-3 col-2">
				<% if(userData.image !== ""){ %>
				<img src="/images/users/<%= userData.image %>" alt="foto de perfil" class="foto-perfil">
				<% }else{ %>
					<img src="/images/users/nicobilinkis.png" alt="foto de perfil" class="foto-perfil">
				<% } %> 
			</div>
			
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><a href="/profile/<%= userData.id %>"><%= userData.name + " " + userData.lastName%> </a></h1>
					
					
				
				</div>
				<div>
					
				</div>
			</div>
			<br><br>
			
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<% if(locals.loggedIn == true && locals.user.id == userData.id){ %>
				<h2 class="products-title">Mis seguidos</h2>
				<% }else{ %>
					<h2 class="products-title">Seguidos</h2>
				<%} %> 
			</div>
			<!-- Show mis productos -->
			
<% for(let i=0;i<following.length;i++){ %>
    <% console.log(following) %> 
    <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
            <a href="/profile/<%= following[i]["userFollowed.id"] %>">
                <figure class="product-box_image">
					<%if(following[i]['userFollowed.image'] !== ""){%>
                    <img src="/images/users/<%= following[i]['userFollowed.image'] %>" alt="cafetera moulinex">
				<%}else{%>
					<img src="/images/users/nicobilinkis.png" alt="cafetera moulinex">
				<%}%>
                </figure>
                <article class="product-box_data">
                    <h2><%= following[i]['userFollowed.name'] + " " +  following[i]['userFollowed.lastName'] %> </h2>
                    
                </article>
            </a>
        </section>
    </div>
    <% } %> 
			<% if(following.length == 0){%>
                <h2>El usuario no sigue a nadie todav√≠a.</h2>
            <%}%>
			
		</div>
		<div class="row">
			<div class="col-12">
				
			</div>
			<!-- Show mis productos -->
			

				
			
			
		</div>
	</div>



	<%- include('./partials/footer.ejs') %> 
</body>	
</html>