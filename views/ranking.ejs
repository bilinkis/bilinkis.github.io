<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %> 
<body>
	
	<% if(locals.loggedIn == null){ %>
	<%- include('./partials/header.ejs') %> 
	<% } else{ %>
		<%- include('./partials/headerLogueado.ejs') %> 
	<% } %>
	
	<!-- Banner -->
	<div class="container">
		<img src="/images/banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Usuarios con más seguidores</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0;i<mostFollowed.length;i++){ %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/profile/<%= mostFollowed[i].id %>" >
						<figure class="product-box_image">
							<img src="/images/users/<%=mostFollowed[i].image%>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= mostFollowed[i]["user.name"] + " " + mostFollowed[i]["user.lastName"] %></h2>
							<p style="font-weight: bold;"><a href="/profile/<%=mostFollowed[i]["user.id"]%>">Seguidores: <%= mostFollowed[i].followers %> </a></p>
						</article>
					</a>
				</section>
			</div>
			<% } %> 
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Usuarios que siguen más personas</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0;i<following.length;i++){ %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/profile/<%= following[i].id %>" >
							<figure class="product-box_image">
								<img src="/images/users/<%=following[i].image%>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= following[i]["user.name"] + " " + following[i]["user.lastName"] %></h2>
								<p>Siguiendo: <%= following[i].following %> </p>
							</article>
						</a>
					</section>
				</div>
				<% } %> 

		</div>
	</div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Usuarios que más comentaron</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0;i<mostCommentsPosted.length;i++){ %> 
