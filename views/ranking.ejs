							</figure>
							<article class="product-box_data">
								<h2><%= mostCommentsReceived[i]["user.name"] + " " + mostCommentsReceived[i]["user.lastName"] %></h2>
								<p>Comentarios recibidos: <%= mostCommentsReceived[i].commentsReceived %> </p>
							</article>
						</a>
					</section>
				</div>
				<% } %> 
				
