


<% if(path == "/register"){ %>
    <form action="/profile" method="post" class='form'>

        <h1>Registrate</h1>
      
        <fieldset>
          <label for="name">Nombre:</label>
          <input type="text" id="name" name="user_name">
          <label for="name">Apellido:</label>
          <input type="text" id="lastpass" name="user_lastname">
      
          <label for="mail">Email:</label>
          <input type="email" id="mail" name="user_email">
          <label for="phone">Teléfono:</label>
          <input type="phone" id="phone" name="user_phone">
          <label for="password">Password:</label>
          <input type="password" id="password" name="user_password">
          <label for="gender">Género:</label>
  <select id="gender" name="user_gender">
                <option value="male">Masculino</option>
                <option value="female">Femenino</option>
                <option value="unknown">Prefiero no elegir</option>
                
            
            </select>
            <label for="date">Fecha de nacimiento:</label>
            <input type="date" id="date" name="user_date">
          
        </fieldset>
      
        
        
        <button type="submit">Enviar</button>
      
      </form>
  <% } %>
  <% if(path == "/login"){ %>
    <form action="/login/submit" method="post" class='form'>

        <h1>Iniciá sesión</h1>
      
        <fieldset>

          <label for="mail">Email:</label>
          <input type="email" id="mail" name="user_email">
 
          <label for="password">Password:</label>
          <input type="password" id="password" name="user_password">
          
        </fieldset>
      
        
        
        <button type="submit">Enviar</button>
      
      </form>
  <% } %> 
