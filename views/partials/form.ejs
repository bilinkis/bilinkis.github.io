


<% if(path == "/register"){ %>
    <form action="/register/store" method="post" class='form' encType="multipart/form-data">

        <h1>Registrate</h1>
      
        <fieldset>
          <label for="name">Nombre:</label>
          <input type="text" id="name" name="name" value="" required>
          <label for="name">Apellido:</label>
          <input type="text" id="lastpass" name="lastName" value=""required>
      
          <label for="mail">Email:</label>
          <input type="email" id="mail" name="email" value=""required>
          <label for="phone">Teléfono:</label>
          <input type="phone" id="phone" name="phone" value=""required>
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" value="" required>
          <label for="gender">Género:</label>
  <select id="gender" name="gender" value="" required>
                <option value="male">Masculino</option>
                <option value="female">Femenino</option>
                <option value="unknown">Prefiero no elegir</option>
                
            
            </select>
            <label for="date">Fecha de nacimiento:</label>
            <input type="date" id="date" name="birthday" value="" required>
            <label for="file">Foto</label>
          <input type="file" id="file" name="user_file" accept=".jpg,.jpeg,.png" required>
          
        </fieldset>
      
        
        
        <button type="submit">Enviar</button>
      
      </form>
  <% } %>
  <% if(path == "/login"){ %>
    <form action="/login/submit" method="post" class='form'>

        <h1>Iniciá sesión</h1>
      
        <fieldset>

          <label for="mail">Email:</label>
          <input type="email" id="mail" name="user_email">
 
          <label for="password">Password:</label>
          <input type="password" id="password" name="user_password">

          <p>
            <input type="checkbox" name="rememberme" value="ok">
            Recordarme
          </p>
          
        </fieldset>
      
        
        
        <button type="submit">Ingresá</button>
      
      </form>
  <% } %> 
  <% if(path == "/product/"){ %>
    <form action="/product/store" method="post" class='form' encType="multipart/form-data">

        <h1>Agregá tu producto</h1>
      
        <fieldset>

          <label for="name">Nombre del producto:</label>
          <input type="text" id="name" name="product_name" required>
 
          <label for="description">Descripción del producto:</label>
          <textarea id="description" name="product_description" required></textarea>
          <label for="file">Foto</label>
          <input type="file" id="file" name="product_file" accept=".jpg,.jpeg,.png" required>
          
          
        </fieldset>
      
        
        
        <button type="submit">Enviar</button>
      
      </form>
      
  <% } %> 



    



