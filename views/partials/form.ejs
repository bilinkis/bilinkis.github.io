


<% if(path == "/register"){ %>
  <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title" style="text-align: center;">Registrate</h2>
			</div>
  <form class="pure-form pure-form-aligned form" style="display: block; margin:0 auto;">
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Nombre</label>
            <input type="text" id="name" placeholder="" required/>
            <span class="pure-form-message-inline">*</span>
        </div>
        <div class="pure-control-group">
            <label for="password">Apellido</label>
            <input type="text" id="lastname" placeholder="" required/>
            <span class="pure-form-message-inline">*</span>
        </div>
        <div class="pure-control-group">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="" />
            <span class="pure-form-message-inline">*</span>
        </div>
        <div class="pure-control-group">
          <label for="phone">Teléfono</label>
          <input type="tel" id="phone" placeholder="" />
          <span class="pure-form-message-inline">*</span>
      </div>
      <div class="pure-control-group">
        <label for="password">Contraseña</label>
        <input type="password" id="pwd" placeholder="" />
        <span class="pure-form-message-inline">*</span>
    </div>
    <div class="pure-control-group">
      <label for="pwdconfirm">Contraseña (confirmación)</label>
      <input type="password" id="pwdconfirm" placeholder="" />
      <span class="pure-form-message-inline">*</span>
  </div>
        <div class="pure-controls">
            <label for="aligned-cb" class="pure-checkbox">
                <input type="checkbox" id="aligned-cb" /> I&#x27;ve read the terms and conditions</label>
            <button type="submit" class="pure-button pure-button-primary">Registrarme</button>
        </div>
    </fieldset>
</form>
</div>
<% } %>



