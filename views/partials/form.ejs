


<% if(path == "/register"){ %>
    <div class="container products-wrapper">
          <div class="row">
              <div class="col-12">
                  <h2 class="products-title" style="text-align: center;">Registrate</h2>
              </div>
    <form class="pure-form pure-form-aligned form" style="display: block; margin:0 auto;">
      <fieldset>
