
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/mercadofun_logo.png">
					</a>
				</div>
	
				<div class="col-7 col-md-6">
					<form action="/search" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todos los juegos en un solo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>

			<ul>
				<li style="font-size: medium; font-weight: bold; color: black; margin-top: 15px;";>Hola <%=locals.user.name%>!</li>
			</ul>
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/product/">Cargar productos</a></li>
					<li><a href="/ranking">Ranking de usuarios</a></li>

				</ul>
	
				<ul class="right-navbar">
					<li><a href="/profile/<%= locals.user.id %>">
							<%= locals.user.name +" "+ locals.user.lastName%> <i class="fas fa-user"></i>
						</a>
					</li>
					<li>
						<form action="/login/logout" method="post">
							<button class="logout" type="submit">
								
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							
							</button>
						</form>
					</li>
				</ul>
			</nav>
		</div>
	</header>
	<!-- /Header -->
	
</body>	
</html>