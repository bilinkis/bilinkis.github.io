<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %> 
<body>
	<% if(locals.loggedIn == null){ %>
		<%- include('./partials/header.ejs') %> 
		<% } else{ %>
			<%- include('./partials/headerLogueado.ejs') %> 
		<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			
			<div class="img-container offset-3 col-2">
				<% if(userData.image !== ""){ %>
				<img src="/images/users/<%= userData.image %>" alt="foto de perfil" class="foto-perfil">
				<% }else{ %>
					<img src="/images/users/nicobilinkis.png" alt="foto de perfil" class="foto-perfil">
				<% } %> 
			</div>
			
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= userData.name + " " + userData.lastName%> 
						
					</h1>
					
				</div>
				<div>
					<ul class="">
						<li><%= posts.length %> productos</li>
						<li><%= comments.length %>  comentarios</li>
					</ul>
				</div>
			</div>
			<% if(locals.loggedIn == true && locals.user.id == userData.id){ %>
			<div style="display:block;margin:0 auto;">
				<a class="btn mt-3 ml-4" href="/profile/<%=userData.id %>/edit-email">EDITAR EMAIL</a>
					<a class="btn mt-3 ml-4" href="/profile/<%=userData.id %>/edit-password">EDITAR PASSWORD</a>
			</div>
			<% } %>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<% if(locals.loggedIn == true && locals.user.id == userData.id){ %>
				<h2 class="products-title">Mis productos</h2>
				<% }else{ %>
					<h2 class="products-title">Productos</h2>
				<%} %> 
			</div>
			<!-- Show mis productos -->
			<% if(locals.loggedIn == true && locals.user.id == userData.id){ %>
				<%if(posts.length == 0){%>
					<h2>No subiste ningún producto todavía.</h2>
					<%}%>
				<% }else{ %> 
					<h2>El usuario no ha subido ningún producto todavía.</h2>
				<%}%>

				<% for(let i = 0;i<posts.length;i++){ %> 
					<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= posts[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= posts[i].image %> " alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= posts[i].title %> </h2>
							<p>
							<%= posts[i].description %> 
							</p>
						</article>
					</a>
				</section>
			</div>
				<% } %> 
			
			
		</div>
	</div>

			


	<%- include('./partials/footer.ejs') %> 
</body>	
</html>